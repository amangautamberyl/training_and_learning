<html>
  <head>
    <style>
    table, td, th {    
    border: 1px solid #ddd;
    text-align: left;
}

table {
    border-collapse: collapse;
    width: 100%;
}

th, td {
    padding: 15px;
}
    </style>
  </head>
  <body bgcolor= "#DEB887">
  <center><h1>SELLER DETAILS</h1></center><p align="right"><font size=3><%= link_to "Home", "/" %>  ||  <%= link_to "Add New Seller", "/seller/new" %></font></p>
    <table>
 	  <tr>
	    <th>SELLER-ID</th>
	    <th>SELLER-NAME</th><br>
	  </tr>
      <% @sellers.each do|seller| %> 
	    <tr>
	  	  <td><%= seller.id %></td>
	      <td><%= seller.name %></td>
	      <td><%= link_to "Edit", "/edit_seller?id=#{seller.id}" %> &nbsp; &nbsp; <%= link_to "Delete", "/delete_seller?id=#{seller.id}", method: 'DELETE' %></td><br>
  	    </tr>  	
      <% end %>
    </table>
  </body>
</html>
