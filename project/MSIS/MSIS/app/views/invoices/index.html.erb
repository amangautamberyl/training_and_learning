<p id="notice"><%= notice %></p>

<h1>Invoices</h1><p align="right"><%= link_to 'Home', root_path %></p>
<hr/>
<table>
  <thead>
    <tr>
      <th>Payment mode</th>
      <th>Payment details</th>
      <th>Price</th>
      <th>Selling date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.payment_mode %></td>
        <td><%= invoice.payment_details %></td>
        <td><%= invoice.price %></td>
        <td><%= invoice.selling_date %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

