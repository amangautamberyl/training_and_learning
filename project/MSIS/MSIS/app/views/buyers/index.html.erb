<p id="notice"><%= notice %></p>

<h1>Buyers</h1><p align="right"><%= link_to 'Home', root_path %></p>
<hr/>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Contact num</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buyers.each do |buyer| %>
      <tr>
        <td><%= buyer.name %></td>
        <td><%= buyer.address %></td>
        <td><%= buyer.contact_num %></td>
        <td><%= link_to 'Show', buyer %></td>
        <td><%= link_to 'Edit', edit_buyer_path(buyer) %></td>
        <td><%= link_to 'Destroy', buyer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

