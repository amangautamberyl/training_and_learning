<p id="notice"><%= notice %></p>

<h1>Brands</h1><p align="right"><%= link_to 'Home', root_path %></p>
<hr/>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Headlocation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.Name %></td>
        <td><%= brand.Headlocation %></td>
        <td><%= link_to 'Show', brand %></td>
        <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
        <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

