<p id="notice"><%= notice %></p>

<center>
<h1>Articles</h1>
<p align = "right"><%= link_to 'New Article', new_article_path %></p>
<table>
  <tbody>
   <% @articles.each do |article| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td>
          <%=  image_tag(article.image_url, class: 'list_image') %>
        </td>
        <td class="list_description">
        <dl>
          <dt><%= article.title %></dt>
          <dd><%= truncate(strip_tags(article.description), length: 80) %></dd>
        </dl>
        </td>
        <td><span style='font-family:Arial;'>&#8377;</span><%= article.price %></td>
        <td class="list_actions">
          <%= link_to 'Show', article %>
          <%= link_to 'Edit', edit_article_path(article) %>
          <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     </tr>
    <% end %>
  </tbody>
</table>
</center>

<br>




